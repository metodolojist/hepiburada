@using hepiburada.Core.Entity
@model List<Customer>

<div class="container">
	<div class="card">
		<div>
			<h2>Müşteri Listesi</h2>
			<a class="btn" asp-action="Create">Yeni Müşteri Ekle</a>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Ad</th>
					<th>Yaş</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var customer in Model)
				{
					<tr>
						<td>@customer.CustomerName</td>
						<td>@customer.Age</td>
						<td>
							<a class="btn" asp-action="Edit" asp-route-id="@customer.CustomerId">Düzenle</a>
							<a class="btn" asp-action="Details" asp-route-id="@customer.CustomerId">Detaylar</a>
							<form asp-action="Delete" method="post" style="display:inline;">
								<input type="hidden" name="id" value="@customer.CustomerId" />
								<button type="submit" class="btn">Sil</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>