@using hepiburada.Core.Entity
@model List<Customer>

<style>
    .card {
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 900px;
        margin: auto;
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .btn-add {
        background-color: #27ae60;
        color: white;
        font-weight: bold;
    }

    .btn-edit {
        background-color: #f39c12;
        color: white;
    }

    .btn-details {
        background-color: #2980b9;
        color: white;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
    }

    th {
        background-color: #2c3e50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="container mt-5">
    <div class="card">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:15px;">
            <h2>Müşteri Listesi</h2>
            <a class="btn btn-add" asp-action="Create">➕ Yeni Müşteri Ekle</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Yaş</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerName</td>
                        <td>@customer.Age</td>
                        <td>
                            <a class="btn btn-edit" asp-action="Edit" asp-route-id="@customer.CustomerId">✏️ Düzenle</a>
                            <a class="btn btn-details" asp-action="Details" asp-route-id="@customer.CustomerId">ℹ️ Detaylar</a>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@customer.CustomerId" />
                                <button type="submit" class="btn btn-delete">🗑️ Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
