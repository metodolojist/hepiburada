@using hepiburada.Core.Entity



@model List<Order>




<div class="container">
	<div class="card">
		<div>
			<h2>Sipariş Listesi</h2>
			<a class="btn" asp-action="Create">Yeni Sipariş Ekle</a>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Ad</th>
					<th>Basım Yılı</th>
					<th>Yazar</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var order in Model)
				{
					<tr>
						<td>@order.OrderName</td>
						<td>@order.OrderDate</td>
						<td>@order.Customer.CustomerName</td>
						<td>
							<a class="btn" asp-action="Edit" asp-route-id="@order.OrderId">Düzenle</a>
							<a class="btn" asp-action="Details" asp-route-id="@order.OrderId">Detaylar</a>
							<form asp-action="Delete" method="post" style="display:inline;">
								<input type="hidden" name="id" value="@order.OrderId" />
								<button type="submit" class="btn">Sil</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>